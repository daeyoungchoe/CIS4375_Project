                  <div class="col-lg-12">
                    <input type="checkbox" class="text-black">   I agree all statements in  <a href="#" class="term-service">Terms of service</a>
                  </div>
                </div>                
                
                <div class="form-group row">
                  <div class="col-lg-12">
                    <input type="submit" class="btn btn-primary btn-lg" value="Register">
                  </div>
                </div>

                <!--Link to Login-->
                <div class="form-group row">
                  <div class="signup-image">
                      <a href="/login" class="member-link">I am already member</a>
                </div>
              </div>

            </form>
          </div>
        </div>
